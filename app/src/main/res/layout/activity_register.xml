<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64EE6A"
    tools:context=".RegisterActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_profile"
                android:src="@drawable/anonym"/>

            <ImageView
                android:id="@+id/chooseBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignEnd="@+id/photo"
                android:layout_alignBottom="@+id/photo"
                android:padding="10dp"
                android:src="@drawable/ic_menu_camera_white"
                android:background="@drawable/background_button"/>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:orientation="vertical"
                android:padding="15dp">

                <EditText
                    android:id="@+id/edNIK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:inputType="number"
                    android:hint="NIK"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:hint="Email"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edPass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="#FFFFFF"
                        android:hint="Password"
                        android:inputType="textPassword|textMultiLine"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/ic_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_lihat"
                        android:gravity="center"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:background="#FFFFFF"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:inputType="textMultiLine"
                    android:hint="Nama Lengkap"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/edTTL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:hint="Tanggal Lahir"
                    android:editable="false"
                    android:clickable="true"
                    android:focusable="false"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingStart="10dp"
                        android:text="Jenis Kelamin"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp">
                        <RadioButton
                            android:id="@+id/radioPria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pria"/>
                        <RadioButton
                            android:id="@+id/radioWanita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/radioPria"
                            android:text="Wanita"/>
                    </RelativeLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/edAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:inputType="textMultiLine"
                    android:hint="Alamat"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/edNohp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FFFFFF"
                    android:inputType="number|textMultiLine"
                    android:hint="No. Telepon"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnDaftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_button_cornerbottom"
                    android:text="Daftar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>